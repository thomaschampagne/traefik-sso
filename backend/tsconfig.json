{
    "compilerOptions": {
        "baseUrl": "./",
        "moduleResolution": "node",
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext",
            "dom"
        ],
        "strict": true,
        "sourceMap": false,
        "declaration": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "@shared/enums": [
                "../shared/enums"
            ],
            "@shared/models": [
                "../shared/models"
            ],
            "@modules/logger": [
                "./modules/logger"
            ]
        }
    },
    "include": [
        "./src",
        "./modules/",
        "../shared/"
    ]
}
